<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- KHUNG TIN NHẮN GỬI -->
    <LinearLayout
        android:id="@+id/containerSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:gravity="end"
        android:orientation="vertical">

        <!-- TEXT -->
        <TextView
            android:id="@+id/tvMessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_sent"
            android:maxWidth="280dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- IMAGE -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImageSent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:visibility="gone">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayoutImageSent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shimmer_auto_start="true">

                <ImageView
                    android:id="@+id/imgMessageSent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#EEEEEE" />
            </com.facebook.shimmer.ShimmerFrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- FILE -->
        <LinearLayout
            android:id="@+id/layoutFileSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_sent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_save"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvFileNameSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:ellipsize="middle"
                android:maxWidth="180dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- REACTION -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardReactionSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerSent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvReactionSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>
