<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:background="?attr/colorSurface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KHÔI PHỤC MẬT KHẨU"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:textColor="?attr/colorPrimary"/>

    <EditText
        android:id="@+id/edUserForgot"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Nhập tên đăng nhập"
        android:paddingLeft="15dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnCheckUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Kiểm tra tài khoản"
        android:layout_marginTop="10dp"
        android:backgroundTint="?attr/colorSecondary"/>

    <LinearLayout
        android:id="@+id/layoutSecurityStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvSecurityQuestionDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Câu hỏi bảo mật của bạn là gì?"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edSecurityAnswerForgot"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Nhập câu trả lời"
            android:paddingLeft="15dp"
            android:background="@android:drawable/editbox_background"/>

        <EditText
            android:id="@+id/edNewPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:background="@android:drawable/editbox_background"/>

        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="ĐỔI MẬT KHẨU"
            android:layout_marginTop="20dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>